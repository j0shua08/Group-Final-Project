// prisma/schema.prisma
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String
  passwordHash String
  createdAt    DateTime @default(now())

  products Product[]        // listings this user is selling
  orders   Order[]  @relation("BuyerOrders") // orders this user placed
}

model Product {
  id        String   @id @default(cuid())
  name      String
  price     Int      // store pesos as integer (e.g., 180)
  campus    String
  category  String
  imageUrl  String?
  createdAt DateTime @default(now())
  seller   User?    @relation(fields: [sellerId], references: [id])
  sellerId String?

  items    OrderItem[]
}

model Order {
  id         String     @id @default(cuid())
  campus     String
  pickup     String
  total      Int
  couponCode String?
  discount   Int?
  buyerPhone String?     // we'll require this at checkout later

  createdAt  DateTime   @default(now())

  buyer   User?    @relation("BuyerOrders", fields: [buyerId], references: [id])
  buyerId String?

  items   OrderItem[]
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  productId String
  qty       Int
  price     Int     // snapshot at order time

  Order   Order   @relation(fields: [orderId], references: [id])
  Product Product @relation(fields: [productId], references: [id])
}


